<div class="container mt-5">
  <h3 class="mb-3">ルーム情報登録</h3>
  <%= render "shared/error", obj: @room %>
  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <div class="row">
    <%= form_with model: @room do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <th><%= f.label :name ,"ルーム名" %><span>必須</span></th>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :introduction ,"ルーム紹介" %><span>必須</span></th>
            <td><%= f.text_area :introduction, class: "form-control" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :price ,"料金" %><span>必須</span></th>
            <td><%= f.number_field :price, class: "form-control" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :address ,"住所" %><span>必須</span></th>
            <td><%= f.text_area :address, class: "form-control" %></td>
          </div>
        </tr>

        <tr>
          <div class="form-group">
            <th><%= f.label :image ,"ルーム画像" %><span>必須</span></th>
            <td><%= f.file_field :image, class:"form-control" %></td>
          </div>
        </tr>
      </table>

      <p class="mt-3 mb-3"><%= f.submit "登録", class: "btn btn-primary" %></p>
      <%= link_to "ホームへ戻る", home_index_url, class: "btn btn-secondary" %>

    <% end %>
  </div>
</div>
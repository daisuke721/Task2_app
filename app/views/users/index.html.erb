<h3>プロフィール</h3>
<%= render "shared/error", obj: @user %>
<%= form_with model:@user do |f| %>
  <table>
    <tr>
      <th><%= f.label :image ,"アイコン画像" %><span>必須</span></th>
      <td><%= f.file_field :image %></td>
    </tr>
    <tr>
      <th><%= f.label :name ,"名前" %><span>必須</span></th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th><%= f.label :introduction ,"自己紹介" %><span>必須</span></th>
      <td><%= f.text_area :introduction, placeholder: "自己紹介を入力" %></td>
    </tr>
  </table>

  <ul>
    <li>
      <%= f.submit "更新" %>
    </li>
  </ul>
<% end %>
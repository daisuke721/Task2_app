<div class="container-fiuld user">
  <div class="row">

    <div class="col-6 col-md-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h3>アカウント</h3>
          </div>
        </div>

        <div class="update-content">
          <div class="row">
            <tr>
              <th class="col-md-3">メールアドレス</th>
              <td class="col-md-9"><%= @user.email %></td>
            </tr>
          </div>
        </div>

        <div class="update-content">
          <div class="row">
            <tr>
              <th class="col-md-3">パスワード</th>
              <td class="col-md-9">*********</td>
            </tr>
          </div>
        </div>

        <div class="update-content">
          <div class="row">
            <div class="btn-toolbar" role="toolbar" aria-label="ボタングループのツールバー">
              <div class="btn-group me-2" role="group" aria-label="第一グループ">
                <button type="button" class="btn btn-primary"><%= link_to "アカウント編集", edit_user_registration_path %></button>
              </div>
              <div class="btn-group me-2" role="group" aria-label="第二グループ">
                <button type="button" class="btn btn-info"><%= link_to "プロフィール編集", users_path %></button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


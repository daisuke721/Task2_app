<h2>新しいアカウントを作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <span>必須</span>
    <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名" %>
  </div>

  <div class="field">
    <span>必須</span>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <span>必須</span>
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <span>必須</span>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード確認" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

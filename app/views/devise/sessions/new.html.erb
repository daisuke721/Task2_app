<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container devise">
    <div class="divise_frame">
      <p class="my-4">ログイン</p>
      <div class="devise_inner">
        <div class="field">
          <span>必須</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
        </div>

        <div class="field">
          <span>必須</span>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
